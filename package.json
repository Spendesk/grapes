{
  "name": "@dev-spendesk/grapes",
  "version": "0.0.0",
  "description": "Spendesk components library",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind": "./dist/tailwind.js",
    "./style": "./dist/style.css"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "build:tailwind": "vite build -c vite.tailwind.config.mjs",
    "build-storybook": "storybook build",
    "build-storybook-test": "storybook build --test",
    "dev": "npm run storybook",
    "lint": "eslint .",
    "play": "vite",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:ci": "vitest --run --coverage --silent --no-color --maxWorkers 2 --minWorkers 1",
    "typecheck": "tsc --noEmit",
    "precommit": "lint-staged",
    "prepare": "husky",
    "create:component": "plop component --plopfile scripts/plopfile.js",
    "create:icon": "plop icon --plopfile scripts/plopfile.js"
  },
  "lint-staged": {
    "*.{json,scss,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --quiet"
    ]
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "cleave.js": "^1.6.0",
    "downshift": "^9.0.10"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-themes": "^9.1.3",
    "@storybook/react": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/cleave.js": "^1.4.12",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "libphonenumber-js": "^1.12.13",
    "lint-staged": "^16.1.5",
    "plop": "^4.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.91.0",
    "storybook": "^9.1.3",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "volta": {
    "node": "22.10.0"
  },
  "overrides": {
    "storybook": "$storybook"
  }
}
